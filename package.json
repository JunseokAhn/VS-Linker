{
  "name": "vs-linker",
  "displayName": "VS-Linker",
  "publisher": "JunseokAhn",
  "repository": "https://github.com/JunseokAhn/VS-Linker",
  "description": "Just Click with CTL to open the file.",
  "version": "1.1.7",
  "icon": "src/resources/icon.png",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "vs-linker configuration",
      "properties": {
        "vs-linker.projects": {
          "type": "array",
          "default": [
            {
              "rootPath": "",
              "regularExpression": "/<!--(.*?)include(.+?)=(\\s+)?\\\"(?<filename>.*?)\\\"(.*)-->/g"
            }
          ],
          "description": "Write your project root path & regExp. Follow README.md"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.31.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "generate-changelog": "^1.8.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.8.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.9.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "fs-extra": "^10.1.0"
  }
}
